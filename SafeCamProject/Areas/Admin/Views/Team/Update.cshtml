@model TeamUpdateVM

<div class="body-wrapper-inner">
    <div class="container-fluid">
        <!--  Row 1 -->
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Profession</label>
                    <select asp-for="ProfessionId" asp-items="@ViewBag.Professions" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></select>
                    <span asp-validation-for="ProfessionId"></span>
                </div>
                <div class="mb-3">
                    <label for="ImageInput" class="form-label">Image</label>
                    <input asp-for="Image" id="ImageInput" type="file" class="form-control" aria-describedby="emailHelp" accept="image/*">
                    <span asp-validation-for="Image"></span>
                    
                </div>
                
                <button asp-action="Update" type="submit" class="btn btn-primary">Update</button>
                <a class="btn btn-warning" asp-controller="Team" asp-action="Index">Back</a>
            </form>

        </div>
    </div>
</div>
